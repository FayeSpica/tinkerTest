<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.a28465.tinkertest.app.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#000">

    <TextView
        android:id="@+id/txv_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="+"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D30000"
        android:text="1.0版本"/>

    <Button
        android:id="@+id/btn_load_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="加载补丁"
        android:background="#00000000"
        android:textColor="#FFF"/>

    <Button
        android:id="@+id/btn_remove_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="卸载所有补丁"
        android:background="#00000000"
        android:textColor="#FFF"/>

    <Button
        android:id="@+id/btn_rollback_patch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="回滚补丁"
        android:background="#00000000"
        android:textColor="#FFF"/>

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="退出"
        android:background="#00000000"
        android:textColor="#FFF"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Info:"></TextView>

    <TextView
        android:id="@+id/txv_app_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="test"></TextView>


    <TextView
        android:id="@+id/txv_patch_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="test"></TextView>

</LinearLayout>
